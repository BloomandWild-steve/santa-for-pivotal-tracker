{
  "name": "Charter Stories for Pivotal Tracker",
  "version": "1.3.0",
  "manifest_version": 2,
  "author": "Kim Johnson, Daphne Lin, David Edwards",
  "description": "Add charter-type stories to your Tracker backlog",
  "homepage_url": "https://github.com/kimberlyjohnson/charter-stories-for-tracker",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "http://www.pivotaltracker.com/*",
    "https://www.pivotaltracker.com/*"
  ],
  "short_name": "Tracker Charters",
  "content_scripts": [
    {
      "matches": [
        "http://www.pivotaltracker.com/*",
        "https://www.pivotaltracker.com/*"
      ],
      "js": [
        "src/inject/isLabelEligible.js",
        "src/inject/inject.js"
      ],
      "css": [
        "css/inject/inject.css"
      ]
    }
  ]
}
